{
	"env": {
		"es6": true,
		"es8": true,
		"node": true,
		"browser": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"printWidth": 100,
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": "off",
		"no-var": "error",
		"prefer-const": "error",
		"endOfLine":"off",
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		]
	},
	"parserOptions": {
		"ecmaVersion": 2018
	}
}